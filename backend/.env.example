# OpenRouter API Configuration (for Gemini models)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative: OpenAI API Configuration (fallback)
# If OPENROUTER_API_KEY is not set, will fallback to OpenAI
# OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=file:./data/nano-grazynka.db

# Server Configuration
PORT=3101
NODE_ENV=development

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600

# Optional: Observability (not required for MVP)
# LANGSMITH_API_KEY=your_langsmith_api_key
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=nano-grazynka