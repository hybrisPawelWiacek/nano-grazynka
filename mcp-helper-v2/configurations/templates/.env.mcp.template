# MCP Server Environment Variables - Project Specific
# Copy this file to .env.mcp and fill in your values
# These override global settings when using ./claude-mcp-env.sh

# GitHub Integration
export GITHUB_PAT="ghp_your_project_specific_token"

# Database Connections
export POSTGRES_CONNECTION_STRING="postgresql://user:pass@localhost:5432/projectdb"

# API Keys - Project Specific
export PERPLEXITY_API_KEY="pplx_project_key"
export BRAVE_API_KEY="brave_project_key"
export FIRECRAWL_API_KEY="fc_project_key"

# Slack Integration
export SLACK_BOT_TOKEN="xoxb-project-token"
export SLACK_TEAM_ID="T_PROJECT_ID"

# Atlassian Services
export CONFLUENCE_URL="https://project.atlassian.net/wiki"
export CONFLUENCE_USERNAME="project@example.com"
export CONFLUENCE_API_TOKEN="project_token"
export JIRA_URL="https://project.atlassian.net"
export JIRA_EMAIL="project@example.com"
export JIRA_API_TOKEN="project_token"

# Project-Specific Paths
export SERENA_PROJECT_PATH="${PWD}"

# Memory Service (if using OpenMemory)
export OPENAI_API_KEY="sk-project-key"

# Notion
export INTERNAL_INTEGRATION_TOKEN="secret_project_token"

# LinkedIn
export LINKEDIN_COOKIE="li_at_project"